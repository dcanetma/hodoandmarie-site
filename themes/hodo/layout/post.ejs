<% if (page.textColor && page.textColor !== 'white'){ %> 
  <style type="text/css">
  	@media (min-width: 992px) {
	    section#post  header h1,
	    section#post  header h1 a,
	    section#post  header h2.post-preview-subtitle,
	    section#post  header p,
	    section#post  header p a {
	    		color: <%= page.textColor %> !important ; 
	    }
	    section#post a.btn {
				border-color: <%= page.textColor %>;
				color: <%= page.textColor %>;
			}
			section#post a.btn:hover {
				color: white;
				background-color: <%= page.textColor %>;
				border-color: <%= page.textColor %>;
	    }
	  }
  </style>
<% } %> 

<section id="<%= page.layout %>" class="post container-fluid mt-1 mt-lg-2" >
	<!-- Post header -->
  <header class="row">  
		<div class="col-12 inner">
			 <img src="<%= page.imageUrl %>" alt="<%= page.title %>"  class="header img-fluid">  
			 <% if (page.videoUrl){ %>	
				 <div class="embed-responsive embed-responsive-16by9">
					 	<iframe id="video" class="header embed-responsive-item"  				 		
					 	src="https://player.vimeo.com/video/<%= page.videoUrl %>?color=06fdf9&portrait=0&autoplay=0" 
					 	width="640" height="360" 
					 	frameborder="0" allow="autoplay; fullscreen" webkitallowfullscreen mozallowfullscreen allowfullscreen>
					 		<p>	You're browser doesn't support Vimeo Videos. 
					 				<a href="https://player.vimeo.com/video/<%= page.videoUrl %>?color=06fdf9&portrait=0&api=1">
					 					Watch the video on Vimeo
					 				</a>.
					 		</p>
					 	</iframe>
					</div>
			 <% } %>	

		</div> 			
		<div class="intro col-12 offset-0 col-lg-7 ml-0 ml-lg-5 pl-lg-5 pt-4 pt-lg-5 ">
			  <% if (page.title){ %>
			    <h1><a href="<%= page.permalink %>"><%= page.title %></a></h1>
			  <% } %>
	      <% if (page.subTitle){ %>
	        <h2 class="post-preview-subtitle"><%= page.subTitle %></h2>
	      <% } %>
			  <% if (page.intro){ %>
				  	<%- markdown(page.intro) %>
			  <% } %>
			  <% if (page.videoUrl){ %>
			  	<!-- Hide  on screens smaller than lg -->
				  <a href="#" class="btn-play btn d-none d-lg-inline-block" title="Play the video">Play video</a>
			  <% } %>			  
		</div> 			
  </header>
  
  <div class="row content">
  	<div class="col-12 pt-2 pt-lg-4">
		  <%- page.content %>  		
  	</div>
  </div>

</section>

