<section id="<%= page.layout %>" class="container-fluid mt-1 mt-lg-2" >
	<!-- Post header -->
  <header class="row">  	
		<div class="col-12 ">
			 <img src="<%= page.imageUrl %>" alt="<%= page.title %>"  class="img-fluid">  
		</div> 			
		<div class="intro col-12 offset-0 col-lg-5 ml-0 ml-lg-5 pl-lg-5 pt-4 pt-lg-5 ">
			  <% if (page.title){ %>
			    <h1><a href="<%= page.permalink %>"><%= page.title %></a></h1>
			  <% } %>
			  <% if (page.intro){ %>
			  	<%- markdown(page.intro) %>
			  <% } %>
			  <% if (page.videoUrl){ %>
			  	<!-- Hide  on screens smaller than lg -->
				  <a href="#" class="btn btn-outline-dark d-none d-lg-inline-block">Play video</a>
			  <% } %>			  
		</div> 			
  </header>
  
  <div class="row content">
  	<div class="col-12 pt-2 pt-lg-4">
		  <%- page.content %>  		
  	</div>
  </div>


</section>

